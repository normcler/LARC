@using LARC.Models;
@model Fund
@{
  ViewBag.Title = "Details";
}

<h2>Details</h2>
<p>@Model.Symbol - @Model.Name</p>

<div class="container-fluid">
  <div class="row">
    <div class="col-md-offset-1 col-md-6 col-xs-12">
      <table class="table table-striped table-bordered">
        <caption>
          Portfolio Holdings for the @Model.Name Fund
        </caption>
        <thead>
          <tr>
            <th>Ticker</th>
            <th>Name</th>
            <th>Weighting</th>
          </tr>
        </thead>
        <tbody>
          @foreach (var equity in Model.FundEquities)
          {
            <tr>
              <td>@equity.EquitySymbol</td>
              <td>@equity.Shares</td>
              <td>@equity.Weighting</td>
            </tr>
          }
</table>
    </div>
  </div>
</div>